<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SeleccionAccionFragment">

    <ImageView
        android:id="@+id/imagenfondoaccion"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:alpha="0.4"
        />

    <TextView
        android:id="@+id/textViewElegidoDeporte"
        android:layout_width="326dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:gravity="center"
        android:text="Has elegido: nombre_deporte"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="OPCIONES CARRERAS"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewElegidoDeporte" />

    <Button
        android:id="@+id/buttonCrearCarrera"
        android:layout_width="283dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        style="@style/BotonesVerdes"
        android:text="Crear carrera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/buttonBorrarCarrera"
        android:layout_width="283dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        style="@style/BotonesRojos"
        android:text="Borrar carrera"
        app:layout_constraintStart_toStartOf="@+id/buttonCrearCarrera"
        app:layout_constraintTop_toBottomOf="@+id/buttonCrearCarrera" />


    <Button
        android:id="@+id/buttonModificar"
        android:layout_width="283dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        style="@style/BotonesMarrones"
        android:text="Modificar/Ver carrera"
        app:layout_constraintStart_toStartOf="@+id/buttonBorrarCarrera"
        app:layout_constraintTop_toBottomOf="@+id/buttonBorrarCarrera" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="30dp"
        android:text="OPCIONES DEPORTISTAS"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/buttonModificar"
        app:layout_constraintTop_toBottomOf="@+id/buttonModificar" />

    <Button
        android:id="@+id/buttonCrearDeportista"
        android:layout_width="283dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        style="@style/BotonesVerdes"
        android:text="Crear deportista"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/buttonBorrarDeportista"
        android:layout_width="283dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        style="@style/BotonesRojos"
        android:text="Borrar deportista"
        app:layout_constraintStart_toStartOf="@+id/buttonCrearDeportista"
        app:layout_constraintTop_toBottomOf="@+id/buttonCrearDeportista" />


    <Button
        android:id="@+id/buttonModificarDeportista"
        android:layout_width="283dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        style="@style/BotonesMarrones"
        android:text="Modificar/Ver deportista"
        app:layout_constraintStart_toStartOf="@+id/buttonBorrarDeportista"
        app:layout_constraintTop_toBottomOf="@+id/buttonBorrarDeportista" />



</androidx.constraintlayout.widget.ConstraintLayout>