<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AnadirParticipante">

    <TextView
        android:id="@+id/textViewArribaParticipantes"
        android:layout_width="411dp"
        android:layout_height="47dp"
        android:gravity="center"
        android:text="Añadir Participante a Carrera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainerViewTodosUsuarios"
        android:name="com.example.proyectotfg.ListaUsuarios"
        android:layout_width="0dp"
        android:layout_height="306dp"
        android:layout_marginTop="3dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonanadirparticipante"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewArribaParticipantes"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonanadirparticipante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:text="Añadir"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentContainerViewTodosUsuarios"
        android:backgroundTint="@color/green"/>

    <Button
        android:id="@+id/buttonborrarparticipante"
        android:layout_width="97dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        android:backgroundTint="@color/red"
        android:text="Borrar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentContainerViewParticipantesanadidos"
        android:layout_marginBottom="2dp"/>

    <Button
        android:id="@+id/buttonfinalizar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="16dp"
        android:text="Finalizar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentContainerViewParticipantesanadidos"
        android:layout_marginBottom="2dp"/>

    <TextView
        android:id="@+id/textViewParticipantesanadidos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        android:text="Participantes añadidos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonanadirparticipante" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainerViewParticipantesanadidos"
        android:name="com.example.proyectotfg.ListaParticipantes"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="22dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonborrarparticipante"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewParticipantesanadidos" />
</androidx.constraintlayout.widget.ConstraintLayout>