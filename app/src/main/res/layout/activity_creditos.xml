<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Creditos">

    <TextView
        android:id="@+id/textViewCreditos"
        android:layout_width="281dp"
        android:layout_height="55dp"
        android:layout_marginTop="44dp"
        android:gravity="center"
        android:text="CRÉDITOS"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewCreadopor"
        android:layout_width="372dp"
        android:layout_height="111dp"
        android:layout_marginTop="84dp"
        android:gravity="center"
        android:text="APP creada por Hugo Serrano Hernández"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCreditos" />

    <TextView
        android:id="@+id/textViewCIPF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:text="Proyecto TFG realizado para el CIPF Juan de Herrrera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCreadopor" />


    <TextView
        android:id="@+id/textViewVersion"
        android:layout_width="255dp"
        android:layout_height="30dp"
        android:layout_marginBottom="64dp"
        android:gravity="center"
        android:text="Versión 0.1"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageViewgithubicon"
        android:layout_width="131dp"
        android:layout_height="112dp"
        android:layout_marginTop="194dp"
        android:layout_marginBottom="107dp"
        app:layout_constraintBottom_toTopOf="@+id/textViewVersion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.133"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCIPF"
        app:srcCompat="@drawable/githubicon" />

    <ImageView
        android:id="@+id/imageViewlinkedinicon"
        android:layout_width="125dp"
        android:layout_height="114dp"
        android:layout_marginTop="195dp"
        android:layout_marginBottom="104dp"
        app:layout_constraintBottom_toTopOf="@+id/textViewVersion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.863"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCIPF"
        app:srcCompat="@drawable/linkedinicon" />


</androidx.constraintlayout.widget.ConstraintLayout>